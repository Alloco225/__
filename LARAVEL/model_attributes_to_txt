
    function getCopyAttribute(){
        // $r = env('APP_URL')."/products/".$this->id;
        $n = "\n";
        $r = "";
        $r .= "Produit";
        $r .= $n.$this->title."";
        $r .= $n.$this->description;
        $r .= $n.$this->price;
        $r .= $n.$this->delivery;
        $r .= "";
        return $r;
    }
